source ~/.vim/dwiw-loader.vim

" show existing tab with 4 spaces width
" set tabstop=4
" when indenting with '>', use 4 spaces width
" set shiftwidth=4
" On pressing tab, insert 4 spaces
" set expandtab
let mapleader = ","
imap jk <esc>
imap kj <esc>

Plugin 'easymotion/vim-easymotion'

let g:airline_powerline_fonts=1
set relativenumber
set number
